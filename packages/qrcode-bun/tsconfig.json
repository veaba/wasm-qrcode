{
  "compilerOptions": {
    "target": "ES2022",
    "module": "ESNext",
    "moduleResolution": "bundler",
    "lib": [
      "ES2022"
    ],
    "noEmit": true,
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "allowSyntheticDefaultImports": true,
    "paths": {
      "@veaba/js-shared": [
        "../js-shared/src/index.ts"
      ]
    }
  },
  "include": [
    "src/**/*",
    "tests/index.test.ts"
  ],
  "exclude": [
    "node_modules",
    "**/*.test.ts"
  ]
}
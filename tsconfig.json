{
  "compilerOptions": {
    "target": "ESNext",
    "useDefineForClassFields": true,
    "module": "ESNext",
    "lib": [
      "ESNext",
      "DOM"
    ],
    "moduleResolution": "Node",
    "strict": true,
    "sourceMap": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "esModuleInterop": true,
    "noEmit": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noImplicitReturns": true,
    "skipLibCheck": true,
    "allowSyntheticDefaultImports": true,
    "baseUrl": ".",
    "paths": {
      "@veaba/qrcode-shared": [
        "./packages/qrcode-shared/src/index.ts"
      ],
      "@veaba/qrcode-js": [
        "./packages/qrcode-js/src/index.js"
      ],
      "@veaba/qrcode-wasm": [
        "./packages/qrcode-wasm/pkg/wasm_qrcode.d.ts"
      ]
    }
  },
  "include": [
    "src/**/*.ts",
    "src/**/*.vue"
  ]
}